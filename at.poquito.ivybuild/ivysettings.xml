<ivysettings>
	<properties file="${ivy.settings.dir}/ivysettings.properties" override="false"/>
	<property name="ivy.repository.pattern" value="[organisation]/[module]/[revision]/[type]s" override="false" />

	<settings defaultResolver="${status}.resolver" />
	
	<caches default="local" defaultCacheDir="${cache.dir}/local">
		<cache name="remote" basedir="${cache.dir}/remote" defaultTTL="eternal"/>
		<cache name="local" basedir="${cache.dir}/local" useOrigin="true" defaultTTL="0ms"/>
	</caches>
	
	<resolvers>
		<ibiblio name="public" m2compatible="true" cache="remote"/>
		
		<url name="shared" cache="remote">
			<ivy pattern="http://poquito.at/ivyrepo/release/${ivy.repository.pattern}/ivy.xml" />
			<artifact pattern="http://poquito.at/ivyrepo/release/${ivy.repository.pattern}/[artifact].[ext]" />
		</url>
		
		<filesystem name="local">
			<ivy pattern="${ivy.repository.dir}/local/${ivy.repository.pattern}/ivy.xml" />
			<artifact pattern="${ivy.repository.dir}/local/${ivy.repository.pattern}/[artifact].[ext]" />
		</filesystem>

		<chain name="integration.resolver" dual="true" >
			<resolver ref="local" />
			<resolver ref="shared" />
			<resolver ref="public" />
		</chain>

	</resolvers>
	
</ivysettings>
