<ivysettings>
	<properties file="${ivy.settings.dir}/ivysettings.properties" />

	<settings defaultCacheDir="${cache.dir}" defaultResolver="main" />
	
	<resolvers>
		<ibiblio name="public" m2compatible="true"/>
		
		<filesystem name="local">
			<ivy pattern="${ivy.repository.dir}/local/${ivy.repository.pattern}/ivy.xml" />
			<artifact pattern="${ivy.repository.dir}/local/${ivy.repository.pattern}/[artifact].[ext]" />
		</filesystem>
		
		<url name="shared">
			<ivy pattern="http://poquito.at/ivyrepo/release/${ivy.repository.pattern}/ivy.xml" />
			<artifact pattern="http://poquito.at/ivyrepo/release/${ivy.repository.pattern}/[artifact].[ext]" />
		</url>

		<chain name="main" dual="true">
			<resolver ref="local" />
			<resolver ref="shared" />
			<resolver ref="public" />
		</chain>

	</resolvers>

	<modules>
		<module organisation="at.poquito.*" name=".*" resolver="local" />
	</modules>
	
</ivysettings>
